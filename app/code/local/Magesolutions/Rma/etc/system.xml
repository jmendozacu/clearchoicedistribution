<?xml version="1.0" encoding="utf-8"?>
<config>
  <sections>
    <rma module="rma">
      <label>RMA Module Configuration</label>
      <tab>sales</tab>
      <frontend_type>text</frontend_type>
      <sort_order>999</sort_order>
      <show_in_default>1</show_in_default>
      <show_in_website>1</show_in_website>
      <show_in_store>1</show_in_store>
      <groups>
        <rma>
          <label>RMA Email Setup</label>
          <frontend_type>text</frontend_type>
          <sort_order>5</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <fields>
            <emailname translate="label">
              <label>Email Name (From)</label>
              <frontend_type>text</frontend_type>
              <sort_order>10</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </emailname>
            <emailaddress translate="label">
              <label>Email Address</label>
              <frontend_type>text</frontend_type>
              <sort_order>11</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </emailaddress>
		  </fields>
        </rma>
      </groups>
	  <groups>
        <rma2>
          <label>Included in the Box</label>
          <frontend_type>text</frontend_type>
          <sort_order>10</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <fields>
            <includedbox translate="label">
              <label>Included in the Box (Separate each item with a comma ",")</label>
              <frontend_type>textarea</frontend_type>
              <sort_order>12</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </includedbox>
		  </fields>
        </rma2>
      </groups>
	  <groups>
	  	<rma3>
			<label>Return Policy</label>
			<frontend_type>text</frontend_type>
			<sort_order>14</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<fields>
				<returndays translate="label">
				  <label>Number of Days (Numeric only)</label>
				  <frontend_type>text</frontend_type>
				  <sort_order>15</sort_order>
				  <show_in_default>1</show_in_default>
				  <show_in_website>1</show_in_website>
				  <show_in_store>1</show_in_store>
            	</returndays>
				<returnpolicy translate="label">
					<label>Return Policy</label>
					<frontend_type>textarea</frontend_type>>
					<sort_order>16</sort_order>
					<show_in_default>1</show_in_default>
		            <show_in_website>1</show_in_website>
              		<show_in_store>1</show_in_store>
				</returnpolicy>
			</fields>
		</rma3>
	  </groups><groups>
	  	<rma4>
			<label>Guest Returns</label>
			<frontend_type>text</frontend_type>
			<sort_order>27</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<fields>
				<usecaptcha translate="label">
					<label>Use CAPTCHA for Guest Returns?</label>
				   <frontend_type>select</frontend_type>
				   <source_model>adminhtml/system_config_source_yesno</source_model>
				   <backend_model>adminhtml/system_config_backend_store</backend_model>
					<sort_order>1</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
               <comment>Adds an extra level of security against possible SQL Injections</comment>
				</usecaptcha>
				<captchapublic translate="label">
					<label>Public Captcha Code</label>
					<frontend_type>text</frontend_type>>
					<sort_order>1</sort_order>
					<show_in_default>1</show_in_default>
		            <show_in_website>1</show_in_website>
              		<show_in_store>1</show_in_store>
				</captchapublic>
				<captchaprivate translate="label">
					<label>Private Captcha Code</label>
					<frontend_type>text</frontend_type>>
					<sort_order>2</sort_order>
					<show_in_default>1</show_in_default>
		            <show_in_website>1</show_in_website>
              		<show_in_store>1</show_in_store>
				</captchaprivate>
			</fields>
		</rma4>
	  </groups>
    </rma>
  </sections>
</config>
