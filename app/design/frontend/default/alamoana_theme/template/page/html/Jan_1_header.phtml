########################################################################################
# Function Use : This function is used to cut character for display purpose
########################################################################################
function charCut($mytext, $limit, $msg="...")
{
   $mytext = strip_tags($mytext);
   if (strlen($mytext) > $limit)
   {
   		$text=chunk_split($mytext,$limit," ");
   }
   else
   {
   		$text=$mytext;
   }
	
   if (strlen($text) > $limit)
   {
       $txt1=wordwrap($text, $limit, '[cut]');
	   $txt2=explode('[cut]', $txt1);
       $ourTxt=$txt2[0];
       $finalTxt=$ourTxt.$msg;
   }
   else
   {
       $finalTxt=$text;
   }
   return $finalTxt;
}

