<?php
/**
 * Category view template
 *
 * @see Mage_Catalog_Block_Category_View
 */
?>
<style type="text/css">
.category-image > img {
    width: 100%;
}
</style>
<?php
    $_helper    = $this->helper('catalog/output');
    $_category  = $this->getCurrentCategory();
    $_imgHtml   = '';
    if ($_imgUrl = $_category->getImageUrl()) {
        $_imgHtml = '<p class="category-image"><img src="'.$_imgUrl.'" alt="'.$this->htmlEscape($_category->getName()).'" title="'.$this->htmlEscape($_category->getName()).'" /></p>';
        $_imgHtml = $_helper->categoryAttribute($_category, $_imgHtml, 'image');
    }
?>
<div style="background:#F8F8F8;overflow:hidden;margin-bottom:15px;">
<div class="page-title category-title">
    <?php if($this->IsRssCatalogEnable() && $this->IsTopCategory()): ?>
        <a href="<?php echo $this->getRssLink() ?>" class="link-rss"><?php echo $this->__('Subscribe to RSS Feed') ?></a>
    <?php endif; ?>
    <h1><?php echo $_helper->categoryAttribute($_category, $_category->getName(), 'name') ?></h1>
</div>

<?php echo $this->getMessagesBlock()->getGroupedHtml() ?>

<?php if($_imgUrl): ?>
<div class="cat_image" style="float: left; width: 25%; padding-right: 2%; margin-top: 0px;">
    <?php echo $_imgHtml ?>
</div>
<?php endif; ?>

<p class="cat_name" style="color:#b8b8b8;font-size:16px;fon-weight:bold;"><?php echo $_helper->categoryAttribute($_category, $_category->getName(), 'name') ?></p>	
<?php if($_description=$this->getCurrentCategory()->getDescription()): ?>
    <div class="category-description std" style="color:#595959;font-size:12px;line-height:18px;float:left;width:70%;">
        <?php echo $_helper->categoryAttribute($_category, $_description, 'description') ?>
    </div>
    <?php endif; ?>
</div>
<div style="clear:both;"></div>
<?php if($this->isContentMode()): ?>
    <?php echo $this->getCmsBlockHtml() ?>

<?php elseif($this->isMixedMode()): ?>
    <?php echo $this->getCmsBlockHtml() ?>
    <?php echo $this->getProductListHtml() ?>

<?php else: ?>
    <?php echo $this->getProductListHtml() ?>
<?php endif; ?>
