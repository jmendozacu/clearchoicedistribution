					$list_pro_related = $this->getChildHtml($_tab['alias']);
					if($list_pro_related)
							{
								echo $list_pro_related;	
							}
							else
							{
								echo "There is no Related products available";	
							}
				}
				elseif ($replace_related_block == 1) // This option always replaced with static CMS block
				{
					if ($related_block)
					{
